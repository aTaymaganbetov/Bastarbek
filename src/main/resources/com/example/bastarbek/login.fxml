<AnchorPane prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bastarbek.LoginController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="240.0" style="-fx-background-color: #b9056b; -fx-border-color: #fafafa;">
         <children>
              <ImageView fx:id="pic" fitHeight="183.0" fitWidth="180.0" layoutX="49.0" layoutY="109.0" opacity="0.9" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../../../../../../picture/zamok.png" />
                  </image>
              </ImageView>
         </children></AnchorPane>
        <TextField fx:id="loginField" layoutX="311.0" layoutY="116.0" promptText="Логин" style="-fx-border-color: #b9056b;">
            <font>
                <Font size="20.0" />
            </font>
        </TextField>
        <PasswordField fx:id="passwordField" layoutX="311.0" layoutY="179.0" promptText="Құпия сөз" style="-fx-border-color: #b9056b;">
            <font>
                <Font size="20.0" />
            </font>
        </PasswordField>
        <Button fx:id="enterButton" layoutX="361.0" layoutY="271.0" mnemonicParsing="false" onAction="#enterAction" prefHeight="46.0" prefWidth="150.0" style="-fx-border-color: #fafafa; -fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #fafafa; -fx-background-color: #b9056b;" text="Кіру" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Button>
        <Button fx:id="closeButton" layoutX="361.0" layoutY="331.0" mnemonicParsing="false" onAction="#exitAction" prefHeight="46.0" prefWidth="150.0" style="-fx-border-color: #b9056b; -fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #fafafa;" text="Шығу" textFill="#b9056b">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Button>
        <Label layoutX="361.0" layoutY="14.0" text="LogIn">
            <font>
                <Font name="Colonna MT" size="60.0" />
            </font>
            <textFill>
                <LinearGradient endX="1.0" endY="1.0">
                    <stops>
                        <Stop>
                            <color>
                                <Color red="0.7254902124404907" green="0.019607843831181526" blue="0.41960784792900085" />
                            </color>
                        </Stop>
                        <Stop offset="1.0">
                            <color>
                                <Color red="0.1882352977991104" green="0.14509804546833038" blue="0.14509804546833038" />
                            </color>
                        </Stop>
                    </stops>
                </LinearGradient>
            </textFill>
        </Label>
        <Button fx:id="clear" layoutX="582.0" layoutY="149.0" mnemonicParsing="false" onAction="#clearAction" prefHeight="46.0" prefWidth="46.0" style="-fx-border-color: #b9056b; -fx-background-radius: 50; -fx-border-radius: 50;" text="жою" textFill="#b9056b">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
      <Text fill="#0033ff" layoutX="391.0" layoutY="259.0" strokeType="OUTSIDE" strokeWidth="0.0">
         <font>
            <Font size="14.0" />
         </font>
      </Text>
      <CheckBox layoutX="354.0" layoutY="237.0" mnemonicParsing="false" text="Құпия сөзді көрсету" textFill="#0033ff">
         <font>
            <Font size="15.0" />
         </font>
      </CheckBox>
    </children>
</AnchorPane>
